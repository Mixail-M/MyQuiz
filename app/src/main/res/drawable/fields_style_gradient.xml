<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="15dp" />
            <gradient
                android:angle="180"
                android:startColor="@color/colorBackground1"
                android:endColor="@color/colorBackground_button"
                 />

        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="15dp" />
            <solid android:color="@color/colorToolbar" />
        </shape>
    </item>


</layer-list>